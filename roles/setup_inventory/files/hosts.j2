[masters]
master ansible_host={{ master_ip }} ansible_user={{ remote_user }}

[workers]
worker1 ansible_host={{ worker_1_ip }} ansible_user={{ remote_user }}
worker2 ansible_host={{ worker_2_ip }} ansible_user={{ remote_user }}

[all:vars]
ansible_python_interpreter={{ python_interpreter }}
master_fqdn={{ master_fqdn }}
worker_1_fqdn={{ worker_1_fqdn }} 
worker_2_fqdn={{ worker_2_fqdn }} 
master_ip={{ master_ip }}
worker_1_ip={{ worker_1_ip }}
worker_2_ip={{ worker_2_ip }}
kubectl_ver={{ kubectl_ver }}
kubeadm_ver={{ kubeadm_ver }}
kubelet_ver={{ kubelet_ver }}
pod_network_cidr={{ pod_network_cidr }}